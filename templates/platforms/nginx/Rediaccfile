#!/bin/bash

prep() {
  echo "Pulling Nginx image..."
  docker pull nginx:latest
  return $?
}

up() {
  if [ -f .env ]; then
    source .env
  fi

  echo "Starting Nginx server..."
  docker compose up -d
  return $?
}

down() {
  echo "Stopping Nginx server..."
  docker compose down -v
  return $?
}