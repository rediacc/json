#!/bin/bash

prep() {
    echo "Pulling ArangoDB image..."
    docker pull arangodb:3.11

    echo "Creating data directories..."
    mkdir -p ./data
    mkdir -p ./apps
    chmod 755 ./data ./apps 2>/dev/null || true

    return 0
}

up() {
    if [ -f .env ]; then
        source .env
    fi

    echo "Starting ArangoDB server..."
    docker compose up -d
    return $?
}

down() {
    echo "Stopping ArangoDB server..."
    docker compose down -v
    return $?
}

