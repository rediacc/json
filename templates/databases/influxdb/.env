# InfluxDB Configuration
CONTAINER_NAME=influxdb-server

# Initial Setup - Admin User
INFLUXDB_INIT_USERNAME=admin
INFLUXDB_INIT_PASSWORD=influxPassword123!

# Initial Setup - Organization and Bucket
INFLUXDB_INIT_ORG=myorg
INFLUXDB_INIT_BUCKET=mybucket

# Data Retention (0 = infinite, or use duration like 30d, 1w, 1y)
INFLUXDB_INIT_RETENTION=0

# Admin Token (leave empty to auto-generate, or set a secure token)
# Generate secure token: openssl rand -base64 32
INFLUXDB_INIT_ADMIN_TOKEN=
